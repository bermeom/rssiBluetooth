<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"

        android:layout_width="160dp">

        <TextView
            android:id="@+id/textview_bt_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT NAME"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textview_bt_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT ADDRESS"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textview_bt_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT TYPE"
            android:textColor="#000000"
            />

<!--
        <TextView
            android:id="@+id/textview_bt_uuid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT UUID"
            android:textColor="#000000" />
-->

        <TextView
            android:id="@+id/textview_bt_signal_strength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT SIGNAL STRENGTH"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/textview_bt_distance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BT DISTANCE"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"

        android:layout_width="130dp"
        android:layout_weight="0.57">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ToggleButton
                android:text="ALERTA"
                android:textOff="@string/alerta"
                android:textOn="@string/alertaN"

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/alert_button"
                />

            <ToggleButton
                android:text="NORMAL"
                android:textOff="@string/normal"
                android:textOn="@string/normalN"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/normal_button" />

            <ToggleButton
                android:text="BAJO"
                android:textOff="@string/bajo"
                android:textOn="@string/bajoN"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/low_button"
                 />
        </LinearLayout>


        <Button
            android:text="CONECTAR"
            android:layout_height="wrap_content"
            android:id="@+id/button"

            android:layout_width="wrap_content"
            android:textSize="12.5sp" />

    </LinearLayout>

</LinearLayout>